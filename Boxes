size = [5,6,7,8,9,10]
column = size
row = size


for element in size:
    size = element
    column = element
    row = element

    while row > 0:
        while column > 0:
            if column == element:
                print("+ " + "- "*(element) + "+")
            column -= 1
            print("| "+"  "*(element) + "|")
        row -= 1
    if row == 0:
        print("+ " + "- "*(element) + "+")
