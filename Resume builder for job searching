# this program needs a resume template doc
# there is a keyword bug that can occur in title_scrape
# if the job title has " - " in it the program will screw up

import requests
from bs4 import BeautifulSoup
import docx
import os
from docx2pdf import convert

job_title2 = ""

def title_scrape():
    print("Insert the website address")
    res = requests.get(input())
    # print(res.text) prints the website
    soup = BeautifulSoup(res.text, 'lxml')
    title_name = soup.select('title')
    title_name2 = (title_name[0].getText())

    keyword = " - " # uses " - " as a seperation for my words and seperates them into 3 lists (before, at " - ", and after)
    after_keyword = title_name2.partition(keyword)
    global job_title2
    job_title = after_keyword[0]
    job_title2 = job_title.title()
    print(job_title2)

def title_changer():
    os.getcwd()

    doc = docx.Document('/Users/ayylmbo/Desktop/Python/Python Automation Project/Resume.docx') #  this is the Resume template

    style = doc.styles['Style1'] # to change how add_run adds text I had to add a new style in word for the doc

    print("")

    new_input = job_title2 # What the job title you want 
    if (len(new_input) > 35): # the job title is greater than 30 characters long, just print out my name
        pass
    else:
        doc.paragraphs[0].add_run("- "+new_input)

    doc.save("Marek_Kulesza.docx") # Saves to a document which later gets turned into a PDF

def doc_pdf():
    new_doc = docx.Document('/Users/ayylmbo/Desktop/Python/Marek_Kulesza.docx')
    print(new_doc.paragraphs[0].text)
    convert(r"C:\Users\ayylmbo\Desktop\Python\Marek_Kulesza.docx", r'C:\Users\ayylmbo\Desktop\Resumes\\'+(new_doc.paragraphs[0].text)+".pdf")

title_scrape()
title_changer()
doc_pdf()
